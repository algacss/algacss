@define refs {
  name: postEditor;
  class: editor;
}

@provide overlay {
  prefers-dark: bgColor-hexf67372 bdColor-hexde5352;
  prefers-toDark: bgColor-hexf67372 bdColor-hexde5352;
}

@provide overlayItem {
  prefers-dark: bdColor-hexde5352;
  prefers-toDark: bdColor-hexde5352;
}

@provide overlayHover {
  prefers-dark: bgColor-hexde5352;
  prefers-toDark: bgColor-hexde5352;
}

@alga {refs.name} {
  .{refs.class} {
    ref: mnh-100vh bgColor-hex360f29 fg-hexc7c7c7;
    ref-backgroundImage: linear-gradient(to top right, #360f29, #97414d);

    &SideBar {
      ref: w-240px bgColor-hex360f29 fg-hexc7c7c7;
      ref-backgroundImage: linear-gradient(to top left, #360f29, #97414d77);
    }

    &Content {

      .{refs.class}Header {
        ref: ml-1.5rem mr-1.5rem;

        h1 {
          ref: mt-0px mb-0px;
        }
      }

      .{refs.class}Body {
        ref: ml-1.5rem mr-1.5rem;

        .{refs.class}Row {
          ref: d-flex justify-between flexWrap-wrap;
        }

        .{refs.class}Left {
          ref: w-100pct bg-hexf67372 fg-white p-10px;
          screen-md: w-2/3 p-20px;
        }

        .{refs.class}Right {
          ref: w-100pct bg-hexb2eef9 fg-hexf67372 p-10px;
          screen-md: w-1/3 p-20px;
        }

        .input {
          ref: fg-black;
        }

        .pickerToggler {
          ref: userSelect-none;
        }

        .pickerContent {
          inject: overlay;

          .pickerHeader,
          .pickerItem,
          .pickerFooter {
            inject: overlayItem;
          }

          .pickerItem:hover {
            inject: overlayHover;
          }
        }

        .tag {
          inject: overlay;

          &:hover {
            inject: overlayHover;
          }
        }

        .tagContent {
          inject: overlay;

          .tagItem {
            inject: overlayItem;
            
            &:hover {
              inject: overlayHover;
            }
          }
        }

        label.dropZoneLabel {
          ref: pt-1rem pb-1rem;
        }
      }
    }
  }
}